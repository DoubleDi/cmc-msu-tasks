long long
mysubstr(char * sample, char * text)
{
    long long position_star = strchr(sample, '*') - sample;
    printf("%lld", position_star);
    long long text_length = strlen(text);
    char half[100];

    memcpy(half, sample, position_star - 1);
    puts("aza");
    half[strlen(half)] = '\0';
    puts(half);
    return 0;
}

